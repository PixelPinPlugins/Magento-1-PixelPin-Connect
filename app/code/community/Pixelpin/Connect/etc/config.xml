<config>
    <modules>
        <Pixelpin_Connect>
            <version>0.2.3</version>
        </Pixelpin_Connect>
    </modules>
    <default>
        <customer>
	        <pixelpin_connect_pixelpin>
                <enabled>0</enabled>
            </pixelpin_connect_pixelpin>			
        </customer>
    </default>
    <frontend>
        <translate>
            <modules>
                <Pixelpin_Connect>
                     <files>
                        <default>Pixelpin_Connect.csv</default>
                     </files>
                </Pixelpin_Connect>
            </modules>
        </translate>        
        <layout>
            <updates>
                <pixelpin_connect>
                    <file>pixelpin_connect.xml</file>
                </pixelpin_connect>
            </updates>
        </layout>
    </frontend>    
    <global>
        <models>
            <pixelpin_connect>
                <class>Pixelpin_Connect_Model</class>
            </pixelpin_connect>
        </models>
        <blocks>
            <pixelpin_connect>
                <class>Pixelpin_Connect_Block</class>
            </pixelpin_connect>            
        </blocks>
        <helpers>
            <pixelpin_connect>
                <class>Pixelpin_Connect_Helper</class>
            </pixelpin_connect>
        </helpers>
        <resources>
            <pixelpin_connect_setup>
                <setup>
                    <module>Pixelpin_Connect</module>
                    <class>Pixelpin_Connect_Model_Resource_Setup</class>
                </setup>
            </pixelpin_connect_setup>
        </resources>        
    </global>
    <frontend>
        <routers>
            <pixelpin_connect>
                <use>standard</use>
                <args>
                    <module>Pixelpin_Connect</module>
                    <frontName>connect</frontName>
                </args>
            </pixelpin_connect>
        </routers>  
    </frontend>    
</config>
